<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <!--provider setting-->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                tieuminh_sumup1_post_listing.tieuminh_sumup1_post_listing_data_source
            </item>
        </item>
    </argument>
        <settings>
            <buttons>
                <button name="add">
                    <url path="sumup1/post/creating"/>
                    <class>primary</class>
                    <label translate="true">Add New Post</label>
                </button>
            </buttons>
            <spinner>spinner_columns</spinner>
            <deps>
                <dep>tieuminh_sumup1_post_listing.tieuminh_sumup1_post_listing_data_source</dep>
            </deps>
        </settings>
    <!--provider setting-->
    <!--datasource-->
    <dataSource name="tieuminh_sumup1_post_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">post_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
<!--        <aclResource>Magento_Cms::block</aclResource>-->
        <dataProvider class="TieuMinh\SumUp1\Ui\Component\DataProvider" name="tieuminh_sumup1_post_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>post_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <!--datasource-->
    <!--toolbar setting-->
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
<!--        <filterSearch name="fulltext"/>-->
        <!--filter setting-->
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
            <filterSelect name="store_id" provider="${ $.parentName }">
                <settings>
                    <captionValue>0</captionValue>
                    <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                    <imports>
                        <link name="visible">componentType = column, index = ${ $.index }:visible</link>
                    </imports>
                </settings>
            </filterSelect>
        </filters>
        <!--filter setting-->
        <!--massaction-->
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <!--delete action-->
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="sumup1/post/massdelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <!--delete action-->
            <!--change status action-->
            <action name="0">
                <settings>
                    <url path="sumup1/post/poststatus">
                        <param name="status">1</param>
                    </url>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="1">
                <settings>
                    <url path="sumup1/post/poststatus">
                        <param name="status">0</param>
                    </url>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        <!--massaction-->
        <!--pagginng-->
        <paging name="listing_paging"/>
        <!--pagginng-->
        <!--export csv-->
        <exportButton class="Magento\Ui\Component\ExportButton">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="options" xsi:type="array">
                    <item name="csv" xsi:type="array">
                        <item name="value" xsi:type="string">csv</item>
                        <item name="label" xsi:type="string" translate="true">CSV</item>
                        <item name="url" xsi:type="string">sumup1/export/PostCsv</item>
                    </item>
                </item>
            </item>
        </argument>
        </exportButton>
        <!--export csv-->
    </listingToolbar>
    <!--toolbar setting-->
    <!--list column-->
    <columns name="spinner_columns">
        <!--select column-->
        <selectionsColumn name="ids">
            <settings>
                <indexField>post_id</indexField>
            </settings>
        </selectionsColumn>
        <!--select column-->
        <!--post id column-->
        <column name="post_id">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">false</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
                <visible>true</visible>
            </settings>
        </column>
        <!--post id column-->
        <!--post thumbnail column-->
        <column name="thumbnail" class="TieuMinh\SumUp1\Ui\Component\Listing\Columns\Thumbnail" component="Magento_Ui/js/grid/columns/thumbnail" sortOrder="20">
            <settings>
                <altField>post thumbnail</altField>
                <hasPreview>1</hasPreview>
                <addField>true</addField>
                <label translate="true">Thumbnail</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <!--post thumbnail column-->
        <!--post title column-->
        <column name="title">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Title</label>
            </settings>
        </column>
        <!--post title column-->
        <!--post short description column-->
        <column name="short_description">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">short_description</label>
            </settings>
        </column>
        <!--post short description column-->
        <!--post content column-->
        <column name="content">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Content</label>
            </settings>
        </column>
        <!--post content column-->
        <!--post status column-->
        <column name="status" class="TieuMinh\SumUp1\Ui\Component\Listing\Columns\Status">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Status</label>
            </settings>
        </column>
        <!--post status column-->
        <!--post url key column-->
        <column name="url_key">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>text</dataType>
                <label translate="true">url_key</label>
            </settings>
        </column>
        <!--post url key column-->
        <!--post tag column-->
        <column name="tag_id" class="TieuMinh\SumUp1\Ui\Component\Listing\Columns\Tags">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Tag</label>
            </settings>
        </column>
        <!--post tag column-->
        <!--post category column-->
        <column name="category_set_id" class="TieuMinh\SumUp1\Ui\Component\Listing\Columns\Categories">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Category</label>
            </settings>
        </column>
        <!--post category column-->
        <!--pushlish date from column-->
        <column name="publish_date_from" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Publish date from</label>
            </settings>
        </column>
        <!--pushlish date from column-->
        <!--pushlish date to column-->
        <column name="publish_date_to" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Publish date to</label>
            </settings>
        </column>
        <!--pushlish date to column-->
        <!--action column-->
        <actionsColumn name="actions" class="TieuMinh\SumUp1\Ui\Component\Listing\Page\PageActions">
            <settings>
                <indexField>post_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
        <!--action column-->
    </columns>
    <!-- list column-->
</listing>
